
<h1 class="neon-header my-5 text-center">USERS INDEX</h1>

<input type="text" class="form-control mx-auto" id="user_query" placeholder="Search for location or title" data-reflex="input->Filter#filter" data-resource="User" data-param="query" data-reflex-root="#users-table" style="width: 80%;">

<div class='newpa'>

<table class="table" id="users-table">
  <thead>
    <tr>
      <th scope="col">&nbsp; &nbsp; Name</th>
      <th scope="col">Events Created</th>
      <th scope="col">Events Attended</th>
      <th scope="col">Member Since</th>
    </tr>
  </thead>
  
 
  <tbody>
  <div class='insdays'>
    <% @users.each do |user| %>
    
      <tr>
        <td><%= link_to user.name, user_path(user), class:"text-decoration-none" %></td>
        <td><%= user.events.count %></td>
        <td><%= user.attendees.count %></td>
        <td><%= "#{time_ago_in_words(user.created_at)} ago" %></td>
      </tr>
     <% end %>
       </div>
  </tbody>


</table>

  
</div>
<footer class="footer mt-auto py-5 footer-bg">

</footer>