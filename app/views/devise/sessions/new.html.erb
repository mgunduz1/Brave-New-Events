

<div class='container-md mx-auto devise-container '>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row col-10 mx-auto my-3 pb-4 pt-5">
  <div class='col-6'>
    <%= f.label "#{:email} ➫" , class:"input_label" %>
    </div>
    <div class='col-6'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input_field" %>
  </div>
  </div>

  <div class="field row col-10 mx-auto mb-3 py-4">
  <div class='col-6'>
    <%= f.label "#{:password} ➫" , class:"input_label"  %>
    </div>
    <div class='col-6'>
    <%= f.password_field :password, autocomplete: "new-password", class:"input_field" %>
  </div>
  </div>

  <div class="field row col-10 mx-auto mb-3 py-4">
  <div class='col-6'>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class:"devise-links" %>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
<div class='col-6'>


     <div class="actions">
    <%= f.submit "LOGIN", class:"btn submit-btn" %>
  </div>

</div>







<% end %>

</div>
</div>

